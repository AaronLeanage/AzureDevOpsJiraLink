{
    "manifest_version": 3,
    "name": "Azure DevOps - Link Jira issue",
    "version": "1.0.1",
    "description": "Adds a link to Jira issue in PR titles/descriptions.",
    "author": "Aaron Leanage",
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.visualstudio.com/*",
                "https://dev.azure.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}